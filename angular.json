{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "schematicCollections": [
      "angular-eslint"
    ]
  },
  "newProjectRoot": "projects",
  "projects": {
    "nimbus-ui": {
      "projectType": "library",
      "root": "projects/nimbus-ui",
      "sourceRoot": "projects/nimbus-ui/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/nimbus-ui/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/nimbus-ui/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/nimbus-ui/tsconfig.spec.json"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/nimbus-ui/.storybook",
            "browserTarget": "nimbus-ui:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/nimbus-ui"
            ],
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/nimbus-ui/.storybook",
            "browserTarget": "nimbus-ui:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/nimbus-ui"
            ],
            "outputDir": "storybook-static"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/nimbus-ui/**/*.ts",
              "projects/nimbus-ui/**/*.html"
            ],
            "eslintConfig": "projects/nimbus-ui/eslint.config.js"
          }
        }
      }
    }
  }
}
